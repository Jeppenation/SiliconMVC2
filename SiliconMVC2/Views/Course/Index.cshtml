@model CourseIndexViewModel
@{
    ViewData["Title"] = "Courses";
}

<section class="courses">
    <div class="container">
        
        <form id="form-filters">
            <div class="header">
                <h1>Courses</h1>
                <select>
                    <option>All categories</option>
                </select>
                <div class="input-search-group">
                    <input id="searchQuery" name="SearchQuery" placeholder="Search courses" />
                    <i class="fa-regular fa-search"></i>
                </div>
            </div>


            <div class="course-items">
                @if(Model.Courses != null)
                {
                    @foreach (var course in Model.Courses)
                    {
                        <a class="course" asp-action="Details" asp-controller="Courses" asp-route-id="@course-id">
                            @if(course.IsBestseller)
                            {
                                <div class="bestseller">Best Seller</div>
                            }
                            <button class="btn btn-circle bookmark"><i class="fa-regular fa-bookmark"></i></button>

                            <img src="~/images/courses/@course.Image" alt="@course.Title"/>
                            <div class="content">
                                <h5 class="title">@course.Title</h5>
                                <p class="author">By @course.Author</p>

                                <div class="pricing">
                                    @if(!string.IsNullOrEmpty(course.DiscountPrice))
                                    {
                                        <div class="discount">@course.DiscountPrice</div>
                                    }


                                    <div class="price @(!string.IsNullOrEmpty(course.DiscountPrice)? "discount-enabled" : "")">@course.Price</div>

                                </div>

                                <div class="footer">
                                    <div class="hours">
                                        <i class="fa-regular fa-clock"></i>@course.Hours
                                    </div>
                                    <div class="likes">
                                        <i class="fa-regular fa-thumbs-up"></i> @course.LikesInPercent (@course.LikesInNumbers)
                                    </div>
                                </div>
                                
                            </div>
                        </a>
                    }
                }

            </div>

        </form>

        <div class="getStarted">
            <div class="getStarted-text">
                <h3 class="text-lead">Ready to get started?</h3>
                <h2>Take Your <div class="blue-text">Skills</div> to the Next Level</h2>
                <a asp-action="index" asp-controller="home" class="btn btn-primary">Work with us</a>
            </div>

            <div class="getStarted-image">
                <img src="~/images/getStarted-Image.svg" alt="Get Started" />
            </div>
        </div>
        

    </div>

</section>

